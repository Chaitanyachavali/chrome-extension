{
  "manifest_version": 2,

  "name": "MyTab",
  "description": "",
  "version": "1.0",

  "browser_action": {
    "default_icon": "assets/img/icon.png"
  },

  "icons": {
    "16": "assets/img/icon_16.png",
    "128": "assets/img/icon_128.png"
  },

  "optional_permissions": ["tabs"],
  "options_page": "options.html",

  "background": {
    "scripts": ["assets/js/background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ]
}
